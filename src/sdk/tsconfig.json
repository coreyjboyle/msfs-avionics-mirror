{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "moduleResolution": "node",
    "jsxFactory": "FSComponent.buildComponent",
    "jsxFragmentFactory": "FSComponent.Fragment",
    "jsx": "react",
    "paths": {
      "*": [
        "/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "Gulpfile.ts",
    "build",
    "dist"
  ],
  "ts-node": {
    "transpiler": "@sucrase/ts-node-plugin",
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    },
    "files": true
  }
}